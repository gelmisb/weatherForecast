<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainy3"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".CurrentWeather">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="40dp"
        android:padding="@dimen/basic30"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/cityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="@string/enter_city"
            android:textColor="@color/colorWhite"
            android:textColorHint="@android:color/background_light"
            android:textSize="@dimen/mediumLargeFont"
            tools:ignore="NestedWeights" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="@dimen/basic50"
            android:maxWidth="@dimen/basic50"
            android:layout_weight="1"
            android:background="@drawable/search"
            android:contentDescription="@string/search_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:singleLine="true"
                android:textAlignment="center"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:minWidth= "50dp"
                android:maxWidth= "200dp"
                android:textSize="100sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/basic10"
                android:layout_marginEnd="@dimen/basic10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingEnd="@dimen/basic10"
                    android:layout_weight="1"
                    android:text="@string/textview"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/mediumFont" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/basic10"
                    android:text="@string/textview"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/mediumFont" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:weightSum="1"
            android:layout_marginStart="@dimen/basic30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/textview"
                android:layout_weight="0.5"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic10"
        android:layout_marginBottom="@dimen/basic10"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textColor="@color/colorWhite"
            android:paddingEnd="@dimen/basic30"
            android:textStyle="bold"
            android:textSize="@dimen/largeFont" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/largeFont" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/basic30"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/basic10">

            <TextView
                android:id="@+id/sunriseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/basic30"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:id="@+id/sunsetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/basic10">

            <TextView
                android:id="@+id/pressureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_marginEnd="@dimen/basic30"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:id="@+id/windText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/basic10">

            <TextView
                android:id="@+id/humidityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/basic30"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:id="@+id/cloudinessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/basic10">

            <TextView
                android:id="@+id/minTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/basic30"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:id="@+id/maxTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:text="@string/textview"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/mediumFont" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>